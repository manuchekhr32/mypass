{
  "name": "mypass",
  "version": "1.0.0",
  "description": "CLI based Password Manager",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/main.js",
    "dev": "nodemon",
    "test": "jest",
    "eslint": "eslint . --ext .ts",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "bin": {
    "mypass": "./dist/main.js"
  },
  "preferGlobal": true,
  "pre-push": [
    "eslint",
    "format:write",
    "test"
  ],
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuchekhr32/mypass.git"
  },
  "keywords": [
    "mypass",
    "password",
    "cli"
  ],
  "author": "Manuchehr",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/manuchekhr32/mypass/issues"
  },
  "homepage": "https://github.com/manuchekhr32/mypass#readme",
  "devDependencies": {
    "@jest/globals": "^29.6.4",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "pre-push": "^0.1.4",
    "prettier": "^3.0.3",
    "prisma": "^5.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "chalk": "^4.1.2",
    "clipboardy": "^2.3.0",
    "commander": "^11.0.0",
    "dayjs": "^1.11.9",
    "figlet": "^1.6.0",
    "inquirer": "^8.2.6"
  }
}
